<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.curso.rs.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:scaleType="center"
        android:gravity="center">

        <ImageButton
            app:srcCompat="@drawable/sapo"
            android:scaleType="fitCenter"
            android:id="@+id/r1"
                        android:background="@drawable/blackborder"
            android:src="@drawable/sapo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/sapo"
            android:scaleType="fitCenter"
            android:id="@+id/r2"
                        android:background="@drawable/blackborder"
            android:src="@drawable/sapo"
            />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/sapo"
            android:scaleType="fitCenter"
            android:id="@+id/r3"
                        android:background="@drawable/blackborder"
            android:src="@drawable/sapo" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/sapo"
            android:scaleType="fitCenter"
            android:id="@+id/r4"
                        android:background="@drawable/blackborder"
            android:src="@drawable/sapo" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/blanco"
            android:id="@+id/blanco"
            android:scaleType="fitCenter"
            android:background="@drawable/blackborder"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/rana"
            android:scaleType="fitCenter"
            android:id="@+id/s1"
                        android:background="@drawable/blackborder"
            android:src="@drawable/rana" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/rana"
            android:scaleType="fitCenter"
            android:id="@+id/s2"
                        android:background="@drawable/blackborder"
            android:src="@drawable/rana" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/rana"
            android:scaleType="fitCenter"
            android:id="@+id/s3"
                        android:background="@drawable/blackborder"
            android:src="@drawable/rana" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/rana"
            android:scaleType="fitCenter"
            android:id="@+id/s4"
                        android:background="@drawable/blackborder"
            android:src="@drawable/rana"
             />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RadioGroup
            android:id="@+id/rdgGrupo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checkedButton="@+id/tactil">

            <RadioButton
                android:id="@+id/tactil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tactil"
                app:buttonTint="@android:color/holo_green_dark" />

            <RadioButton
                android:id="@+id/boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Boton"
                app:buttonTint="@android:color/holo_green_dark" />
        </RadioGroup>

        <Button
            android:id="@+id/accion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mover"
            android:visibility="invisible" />

        <Button
            android:text="Reiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
